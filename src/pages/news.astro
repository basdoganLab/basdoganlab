---
import Layout from '~/layouts/PageLayout.astro';
import { getCollection } from 'astro:content';

const metadata = {
  title: 'News',
  description: 'Recent updates from the Basdogan Lab.',
};

const entries = await getCollection('news', ({ data }) => !data.draft);
const news = entries.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const formatter = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
  timeZone: 'UTC',
});
---

<Layout metadata={metadata}>
  <section class="mx-auto max-w-5xl px-6 py-16 lg:py-24">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900">News</h1>
    <p class="mt-4 text-lg text-gray-700">Announcements, awards, talks, and lab milestones.</p>

    <div class="mt-10 space-y-6">
      {
        news.map((item) => (
          <article class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
            <p class="text-sm uppercase tracking-wide text-sky-700">{formatter.format(item.data.date)}</p>
            <h2 class="mt-2 text-2xl font-semibold text-gray-900">{item.data.title}</h2>
            <p class="mt-3 text-gray-700">{item.data.summary}</p>
            {item.data.tags?.length ? <p class="mt-3 text-sm text-gray-500">Tags: {item.data.tags.join(', ')}</p> : null}
          </article>
        ))
      }
      {news.length === 0 && <p class="text-gray-700">No news posts yet.</p>}
    </div>
  </section>
</Layout>
