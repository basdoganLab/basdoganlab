---
import Layout from '~/layouts/PageLayout.astro';
import { researchAreas } from '~/data/research';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Research',
  description: 'Current and ongoing research directions in the Basdogan Lab.',
};

---

<Layout metadata={metadata}>
  <section class="mx-auto max-w-7xl px-6 py-16 lg:py-24">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900">Research</h1>
    <p class="mt-4 max-w-3xl text-lg text-gray-700">
      Our group focuses on combining physics-based modeling with modern data methods. Below are the primary research thrusts.
    </p>

    <div class="mt-10 grid gap-6 md:grid-cols-3">
      {
        researchAreas.map((area) => (
          <article class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
            <h2 class="text-xl font-semibold text-gray-900">{area.title}</h2>
            <p class="mt-3 text-gray-700">{area.summary}</p>
            <a
              href={getPermalink(`/research/${area.slug}`)}
              class="mt-5 inline-flex items-center rounded-lg bg-sky-700 px-4 py-2 text-sm font-semibold text-white hover:bg-sky-600"
            >
              Read More
            </a>
          </article>
        ))
      }
    </div>
  </section>
</Layout>
